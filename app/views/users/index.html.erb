<!-- app/views/users/index.html.erb -->
<h1>Usuarios</h1>

<%= link_to 'Crear Usuario', new_user_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Mostrar', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
