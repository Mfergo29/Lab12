<%- if controller_name != 'sessions' %>
  <div class="d-grid gap-2 mt-2">
    <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-secondary' %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <div class="d-grid gap-2 mt-2">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-secondary' %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="d-grid gap-2 mt-2">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'btn btn-secondary' %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="d-grid gap-2 mt-2">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'btn btn-secondary' %>
  </div>
<% end %>

<%- if controller_name != 'registrations' && action_name != 'new' %>
  <div class="d-grid gap-2 mt-2">
    <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-secondary' %>
  </div>
<% end %>

<%- if controller_name == 'registrations' && action_name == 'edit' %>
  <div class="d-grid gap-2 mt-2">
    <%= link_to "Cancel my account", registration_path(resource_name), class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
<% end %>
